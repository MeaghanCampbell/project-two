<main>
    <h3>Add A Session</h3>
    <section class="workout-session">
         <div class="section-header">
        <div class="section-header-content">
          <em class="date">{{workout.date}}</em>
        </div>
      </div>
      <div class="session-content">
        <p>Workout Type</p>
        <select>
           {{#select status}}
          <option value="stength">Strength</option>
          <option value="bouldering">Bouldering</option>
          <option value="routes">Routes</option>
          <option value="hangboard">Hangboard</option>
          <option value="campus">Campus</option>
          <option value="stretching">Stretching</option>
          {{/select}}
        </select>

        <p>Time to complete</p>
        <input class="add-session-input" type="text" placeholder="30 mins">{{time}}</input>

        <p>Level of difficulty</p>
        <select>
          {{#select status}}
          <option value="beginner">Beginner</option>
          <option value="intermediate">Intermediate</option>
          <option value="advanced">Advanced</option>
          {{/select}}
        </select>

        <p>Description</p>
        <textarea class="add-session-description">{{description}}</textarea>
      </div>
      <a>
        <div class="save-banner">
          <i class="fas fa-bookmark save-icon"></i>
          <p> SAVE YOUR SESSION</p>
        </div>
      </a>
    </section>
  </main>